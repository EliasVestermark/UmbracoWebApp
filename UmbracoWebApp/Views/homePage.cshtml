</section>
<section id="trusted">
    <div class="container">
        <div class="text" style="background-image: url(@trustedBackgroundImage)">
            <h3>@Model?.Value("trustedHeadline")</h3>
            <h3 class="theme">@Model?.Value("trustedHeadlineTheme")</h3>
            <p>@Model?.Value("trustedText")</p>
